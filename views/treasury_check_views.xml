<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--decoration-danger="state=='delivered' or (date_due and date_due &lt;= current_date)"-->
    <record id="treasury_check_view_tree" model="ir.ui.view">
        <field name="name">treasury.check.view.tree</field>
        <field name="model">treasury.check</field>
        <field name="arch" type="xml">
            <tree decoration-success="state=='new' or state=='draft'" decoration-info="state=='printed'"
                  decoration-bf="state=='delivered'"
                  decoration-muted="state=='canceled' or state=='cleaned'">
                <field name="name"/>
                <field name="date_due"/>
                <field name="amount"/>
                <field name="beneficiary"/>
                <field name="reason"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="treasury_check_view_form" model="ir.ui.view">
        <field name="name">treasury.check.view.form</field>
        <field name="model">treasury.check</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_check" string="print" type="object" class="btn-primary"/>
                    <button name="deliver_check" string="deliver" type="object" class="btn-primary"
                            attrs="{'invisible':[('state','!=','printed')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_due" attrs="{'readonly':[('state','not in',['new', 'draft'])]}" required="1"/>
                            <field name="purpose" attrs="{'readonly':[('state','not in',['new', 'draft'])]}" required="1"/>
                            <field name="company_id" groups="base.group_multi_company"
                                   attrs="{'readonly':[('state','not in',['new', 'draft'])]}" required="1"/>
                        </group>
                        <group>
                            <field name="amount" attrs="{'readonly':[('state','not in',['new', 'draft'])]}" required="1"/>
                            <field name="beneficiary" attrs="{'readonly':[('state','not in',['new', 'draft'])]}" required="1"/>
                            <field name="reason" attrs="{'readonly':[('state','not in',['new', 'draft'])]}" required="1"/>
                            <field name="date_delivery" attrs="{'invisible':[('state','in',['new', 'draft'])]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="treasury_check_action_view_tree" model="ir.actions.act_window">
        <field name="name">Treasury Check</field>
        <field name="res_model">treasury.check</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first check!
            </p>
        </field>
    </record>
</odoo>